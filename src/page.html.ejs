<html>

    <head>

        <title>MorTeam - <%= page %></title>
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:700,300,400" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Exo+2:400,300,200" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Titillium+Web" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" />

        <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

        <% if (page === "Home") { %>
            <script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"></script>
        <% } %>

        <% if (page === "Map") { %>
            <script src="/teamLocations.js"></script>
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCcdl2nD-CXNSBNpxD3mm6micqLMFRA9PE"></script>
        <% } %>

        <% var pages = ["Login", "Signup", "Fp", "Chat", "Void"]
        if (pages.indexOf(page) === -1) { %>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jBox/0.3.2/jBox.js"></script>        
            <script>console.log(jBox);</script>
        <% } %>

    </head>

    <body
        <% if (page != "Login") { %>
            style="background-color: #E9E9E9;"
        <% } %>
    >

        <div id="allContent"></div>

        <script type="text/javascript">
            window.__userInfo = <%- JSON.stringify(userInfo || null) %>;
            window.__options = <%- JSON.stringify(options || null) %>;
        </script>

        <script src="/js/vendor"></script>
        <script src="/js/<%= page %>"></script>

        <script type="text/javascript">
            // each root jsx file has to define the global variable __pageInit
            // it must contain Page, React, and ReactDOM
            // global variables ftw
            window.__pageInit.ReactDOM.render(
                window.__pageInit.React.createElement(
                    window.__pageInit.Page,
                    null
                ),
                document.getElementById("allContent")
            );
        </script>

    </body>

</html>
